<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/row_view"
    >
    <LinearLayout
        android:id="@+id/country_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical"
        android:background="@drawable/card_view_normal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/country_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/lato_bold"
                android:gravity="bottom"
                android:text="Poland"
                android:textColor="@color/primary_text"
                android:textSize="8pt"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/new_cases_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="12dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/new_cases_number"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:autoSizeMaxTextSize="20pt"
                    android:autoSizeMinTextSize="12pt"
                    android:autoSizeStepGranularity="2pt"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:text="244"
                    android:textColor="@color/icons" />

                <TextView
                    android:id="@+id/new_cases_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:gravity="center_horizontal"
                    android:text="new cases"
                    android:textColor="@color/primary_text"
                    android:textSize="8pt" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/total_cases_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="14dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/total_cases_number"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:autoSizeMaxTextSize="20pt"
                    android:autoSizeMinTextSize="12pt"
                    android:autoSizeStepGranularity="2pt"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:text="36272323"
                    android:textColor="@color/icons" />

<!--                android:textSize="20pt"-->

                <TextView
                    android:id="@+id/total_cases_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:gravity="center_horizontal"
                    android:text="total cases"
                    android:textColor="@color/primary_text"
                    android:textSize="8pt" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>